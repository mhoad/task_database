<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Free</th>
    <th>Paid</th>
    <th>Impact score</th>
    <th>Doability score</th>
    <th>Time taken</th>
    <th>Reqruires developer</th>
    <th>Requires client</th>
    <th>Risk score</th>
    <th>Total score</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.free %></td>
    <td><%= task.paid %></td>
    <td><%= task.impact_score %></td>
    <td><%= task.doability_score %></td>
    <td><%= task.time_taken %></td>
    <td><%= task.reqruires_developer %></td>
    <td><%= task.requires_client %></td>
    <td><%= task.risk_score %></td>
    <td><%= task.total_score %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

